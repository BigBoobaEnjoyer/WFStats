
# Файл конфигурации редактора
root = true

[*]
# Базовые настройки для всех файлов
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
# Специфические настройки для Python
indent_style = space
indent_size = 4
max_line_length = 88

[*.pyi]
# Настройки для файлов определений типов
indent_style = space
indent_size = 4


[Makefile]
# Настройки для Makefile
indent_style = tab

[docs/**]
# Настройки для документации
max_line_length = 120

[tests/**]
# Настройки для тестовых файлов
max_line_length = 100